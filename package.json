{
  "name": "seguir-notify",
  "version": "1.0.0",
  "engines": {
    "node": ">=8"
  },
  "description": "Notification server for self-hosted social network backend and API",
  "main": "api/index.js",
  "scripts": {
    "start": "node server",
    "worker": "node server/worker",
    "lint": "semistandard",
    "test": "istanbul cover _mocha -- --exit -b -R spec tests/acceptance/*",
    "precommit": "semistandard",
    "generate-changelog": "github-changes -n ${npm_package_version} --only-pulls --use-commit-body",
    "version": "npm run generate-changelog && git add CHANGELOG.md"
  },
  "keywords": [
    "social",
    "api",
    "follow",
    "friend",
    "like",
    "post",
    "cassandra"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/cliftonc/seguir-notify.git"
  },
  "author": "clifton.cunningham@gmail.com",
  "license": "MIT",
  "dependencies": {
    "async": "^1.5.2",
    "bcrypt": "^0.8.1",
    "bunyan": "^1.3.2",
    "debug": "^2.2.0",
    "lodash": "^4.6.1",
    "moment": "^2.9.0",
    "redis": "^2.6.0-0",
    "restify": "^4.3.2",
    "seguir": "^1.0.2"
  },
  "devDependencies": {
    "apidoc": "^0.17.6",
    "casual": "^1.4.7",
    "expect.js": "^0.3.1",
    "github-changes": "^1.1.2",
    "husky": "^0.8.1",
    "istanbul": "^0.4.5",
    "mocha": "^5.2.0",
    "redis-mock": "^0.4.9",
    "semistandard": "^12.0.1"
  },
  "semistandard": {
    "ignore": [
      "doc/**",
      "coverage/**"
    ]
  }
}
